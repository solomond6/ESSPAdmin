
@{
    ViewBag.Title = "CreateEmployerContact";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">
                    New Employer Contact
                </h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="#" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">
                        -
                    </li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">
                                Actions
                            </span>
                        </a>
                    </li>
                    <li class="m-nav__separator">
                        -
                    </li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">
                                New Contact
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="m-content">
        <div class="row">
            <div class="col-lg-6">
                <!--begin::Portlet-->
                <div class="m-portlet">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon m--hide">
                                    <i class="la la-gear"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    New Employer Contact
                                </h3>
                            </div>
                        </div>
                    </div>
                    <!--begin::Form-->
                    
                    <form class="m-form m-form--fit" method="post" action="@Url.Action("CreateEmployerContact","Employers")">
                        <div class="m-portlet__body">
                            <div class="m-form__section m-form__section--first">
                                <div class="m-form__heading">
                                    @if (ViewBag.Error != null)
                                    {
                                        <alert class="alert alert-danger">@ViewBag.Error</alert>
                                    }
                                </div>
                                <div class="m-form__heading">
                                    <h3 class="m-form__heading-title">User Info.</h3>
                                </div>
                                <div class="form-group m-form__group">
                                    <div class="ui-widget">
                                        <label for="example_input_full_name">Employer ID:</label>
                                        <input type="text" name="EmployerId" class="form-control m-input" placeholder="Please Select The Employer" id="employerList" required>
                                        <span class="m-form__help">Please enter the first 2 digit of the employer name to get the Employer ID</span>
                                    </div>
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="example_input_full_name">Fullname:</label>
                                    <input type="text" name="Fullname" class="form-control m-input" placeholder="Enter Contact Fullname" required>
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="example_input_full_name">Email Address:</label>
                                    <input type="text" name="Email" class="form-control m-input" placeholder="Enter Contact Email Address" required>
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="example_input_full_name">Phone Number:</label>
                                    <input type="text" name="PhoneNo" class="form-control m-input" placeholder="Enter Contact Phone Number" required>
                                </div>
                                <div class="form-group m-form__group">
                                    <label>Role:</label>
                                    <select name="Role" class="form-control m-input" id="roles" required>
                                        <option value="">Select A Role</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                            <div class="m-form__actions m-form__actions--solid">
                                <button type="submit" class="btn btn-success">Submit</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script type="text/javascript">
    $("#employerList").autocomplete({
        source: function(request,response) {
            $.ajax({
                url: "@Url.Action("GetEmployersList", "Admin")",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data.data, function (item) {
                        $("#employerList").removeClass( "ui-autocomplete-loading" );
                        return { label: item.CompanyName, value: item.EmployerID};
                    }));
                }
            })
        },
        minLength: 2,
        messages: {
            noResults: "", results: ""
        },
    });
</script>


